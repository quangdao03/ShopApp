<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Welcome Home,"
                android:textColor="@color/lightBlack"
                android:theme="@style/textTheme"
                app:layout_constraintBottom_toTopOf="@id/guideline"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:id="@+id/userName_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="20sp"
                android:text="Quang Đạo" />
        </LinearLayout>
        <de.hdodenhof.circleimageview.CircleImageView

            android:layout_gravity="center|right"
            android:id="@+id/userImage_ImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/userName_TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView4"
            android:src="@drawable/dao" />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatEditText
        android:textSize="16sp"
        android:id="@+id/shopSearch_EditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/search_edittext_shape"
        android:drawableStart="@drawable/ic_baseline_search_24"
        android:hint="Search Store"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:maxLines="1"
        android:padding="8dp" />



    <androidx.cardview.widget.CardView

        android:layout_marginTop="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.denzcoskun.imageslider.ImageSlider
                app:iss_corner_radius="10"
                app:iss_period="1000"
                app:iss_auto_cycle="true"
                app:iss_delay="2000"
                app:iss_title_background="@drawable/gradient"
                android:id="@+id/imgSlider"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:textSize="18sp"
            android:text="Danh mục hàng đầu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
<!--        <androidx.appcompat.widget.AppCompatTextView-->
<!--            android:gravity="end"-->
<!--            android:textColor="@color/colorPrimary"-->
<!--            android:layout_margin="10dp"-->
<!--            android:textSize="15sp"-->
<!--            android:text="Tất cả"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"/>-->
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
       android:layout_marginStart="10dp"
        android:id="@+id/rcySP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>